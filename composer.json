{
    "name": "youcode/mvc-framework",
    "description": "A custom MVC PHP framework",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}